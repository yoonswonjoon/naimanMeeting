<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonBasicMiddleSize">
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">#00ffffff</item>
        <item name="android:tint">#000</item>
    </style>



    <style name="text_button_clickable_white">
        <item name="fontFamily">@font/app_font</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:elevation">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width"> wrap_content </item>
        <item name="android:layout_height"> wrap_content </item>
        <item name="android:clickable"> true </item>
        <item name="android:focusable"> true </item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:foreground"> ?selectableItemBackground </item>
        <item name="android:orientation"> horizontal </item>
        <item name="android:visibility"> visible </item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:background">@drawable/text_button_rect_possible_white</item>
        <item name="android:paddingBottom">10dp</item>
    </style>


